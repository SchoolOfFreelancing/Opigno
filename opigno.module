/**
 * Implements hook_block_view()
 */
function opigno_block_view($delta) {
  module_load_include('inc', 'opigno', 'includes/opigno.block');
  
  switch ($delta) {
    case 'og_tools':
      return opigno_og_tools_block();
    
    case 'add_og_content':
      return opigno_og_add_content_block();
  }
}

